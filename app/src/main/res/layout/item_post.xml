<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:layout_marginVertical="4dp"
     app:cardElevation="0dp"
     app:cardBackgroundColor="@color/card_bg"
     app:cardCornerRadius="0dp">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="12dp"
         android:orientation="vertical"
         android:id="@+id/postLayout">

        <RelativeLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:src="@drawable/ic_default_avatar"
                 app:civ_border_width="0.5dp"
                 app:civ_border_color="@color/text_secondary"
                 android:id="@+id/ivAuthorAvatar" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_toEndOf="@id/ivAuthorAvatar"
                 android:layout_toStartOf="@id/btnMenu"
                 android:orientation="vertical"
                 android:layout_marginStart="12dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:orientation="horizontal">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/text_primary"
                         tools:text="John Doe"
                         android:id="@+id/tvAuthorName"
                         android:textStyle="bold" />

                    <ImageView
                         android:layout_height="16dp"
                         android:layout_width="16dp"
                         android:visibility="gone"
                         app:tint="@color/primary"
                         android:layout_marginStart="4dp"
                         app:srcCompat="@drawable/ic_verified"
                         android:id="@+id/ivVerified" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginHorizontal="4dp"
                         android:textColor="@color/text_secondary"
                         android:id="@+id/tvDotSeparator"
                         android:text="Â·"
                         android:textStyle="bold" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="12sp"
                         android:textColor="@color/text_secondary"
                         tools:text="2h ago"
                         android:id="@+id/tvTimestamp" />

                </LinearLayout>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/text_secondary"
                     tools:text="@johndoe"
                     android:id="@+id/tvUsername" />

            </LinearLayout>

            <ImageButton
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:layout_alignParentEnd="true"
                 app:iconTint="@color/text_secondary"
                 app:srcCompat="@drawable/ic_more_vert"
                 android:id="@+id/btnMenu" />

        </RelativeLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="8dp"
             android:textSize="17sp"
             android:textColor="@color/text_primary"
             android:id="@+id/tvPostContent" />

        <FrameLayout
             android:layout_height="300dp"
             android:layout_width="match_parent"
             android:layout_marginBottom="8dp">

        </FrameLayout>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="8dp"
             android:visibility="gone"
             app:strokeColor="@color/nav_background_stroke"
             android:elevation="0dp"
             app:strokeWidth="0.5dp"
             app:cardBackgroundColor="@color/surface"
             app:cardCornerRadius="8dp"
             android:foreground="?attr/selectableItemBackground"
             android:id="@+id/layoutLinkPreview">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:padding="8dp"
                 android:orientation="horizontal">

                <ImageView
                     android:layout_height="80dp"
                     android:layout_width="80dp"
                     android:scaleType="centerCrop"
                     android:id="@+id/ivLinkImage" />

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:orientation="vertical"
                     android:layout_marginStart="8dp"
                     android:layout_weight="1">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:ellipsize="end"
                         android:maxLines="1"
                         android:id="@+id/tvLinkTitle" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:ellipsize="end"
                         android:layout_marginTop="4dp"
                         android:maxLines="2"
                         android:id="@+id/tvLinkDescription" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_marginTop="4dp"
                         android:id="@+id/tvLinkDomain" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:paddingVertical="4dp"
             android:orientation="horizontal">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_weight="1">

                <ImageButton
                     android:layout_height="32dp"
                     android:layout_width="32dp"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:iconTint="@color/text_secondary"
                     app:srcCompat="@drawable/ic_like_outline"
                     android:id="@+id/btnLike" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/text_secondary"
                     android:layout_marginStart="4dp"
                     tools:text="1.2K"
                     android:id="@+id/tvLikeCount" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_weight="1">

                <ImageButton
                     android:layout_height="32dp"
                     android:layout_width="32dp"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:iconTint="@color/text_secondary"
                     app:srcCompat="@drawable/ic_comment"
                     android:id="@+id/btnComment" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/text_secondary"
                     android:layout_marginStart="4dp"
                     tools:text="245"
                     android:id="@+id/tvCommentCount" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_weight="1">

                <ImageButton
                     android:layout_height="32dp"
                     android:layout_width="32dp"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:iconTint="@color/text_secondary"
                     app:srcCompat="@drawable/ic_repost_outline"
                     android:id="@+id/btnRepost" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/text_secondary"
                     android:layout_marginStart="4dp"
                     tools:text="89"
                     android:id="@+id/tvRepostCount" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_weight="1">

                <ImageButton
                     android:layout_height="32dp"
                     android:layout_width="32dp"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:iconTint="@color/text_secondary"
                     app:srcCompat="@drawable/ic_bookmark_outline"
                     android:id="@+id/btnBookmark" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/text_secondary"
                     android:layout_marginStart="4dp"
                     tools:text="56"
                     android:id="@+id/tvBookmarkCount" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>