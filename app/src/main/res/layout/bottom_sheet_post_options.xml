<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="8dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_bottom_sheet_handle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_pin_post_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تثبيت المنشور"
        app:icon="@drawable/ic_pin" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_edit_post_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تعديل المنشور"
        app:icon="@drawable/ic_edit" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_delete_post_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حذف المنشور"
        app:icon="@drawable/ic_delete" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_save_post_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حفظ المنشور"
        app:icon="@drawable/ic_bookmark_outline" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_copy_link_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نسخ الرابط"
        app:icon="@drawable/ic_link" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_share_post_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مشاركة المنشور"
        app:icon="@drawable/ic_share" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_edit_privacy_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تعديل الخصوصية"
        app:icon="@drawable/ic_lock" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/option_report_post_bs"
        style="@style/Widget.Starry.BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إبلاغ عن المنشور"
        app:icon="@drawable/ic_report" />

</LinearLayout>