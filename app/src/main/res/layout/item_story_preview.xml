<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/bg_story_ring"
        android:padding="2dp"> <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivStoryAuthorAvatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_default_avatar"
        app:civ_border_width="0dp"
        app:civ_border_color="@android:color/transparent" />

        <ImageView
            android:id="@+id/ivAddStory"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="-4dp"
            android:background="@drawable/circle_background_red"
            app:tint="@android:color/white"
            android:contentDescription="Add Story"
            android:visibility="gone" /> </FrameLayout>

    <TextView
        android:id="@+id/tvStoryAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/text_primary"
        android:layout_marginTop="4dp"
        tools:text="Your Story" />

</LinearLayout>